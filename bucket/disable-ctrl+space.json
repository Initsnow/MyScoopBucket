{
  "version": "20240705",
  "description": "禁用系统默认ctrl+space切换输入法快捷键",
  "license": "Unknown",
  "installer": {
    "script": [
      "$backupPath = \"$dir\\registry_backup.reg\"",
      "# 备份注册表值",
      "reg export \"HKCU\\Control Panel\\Input Method\\Hot Keys\\00000010\" $backupPath -y",
      "reg export \"HKCU\\Control Panel\\Input Method\\Hot Keys\\00000070\" $backupPath -y",
      "reg export \"HKU\\.DEFAULT\\Control Panel\\Input Method\\Hot Keys\\00000010\" $backupPath -y",
      "reg export \"HKU\\.DEFAULT\\Control Panel\\Input Method\\Hot Keys\\00000070\" $backupPath -y",
      "# 设置新的注册表值",
      "New-Item -Path \"HKCU:\\Control Panel\\Input Method\\Hot Keys\\00000010\" -Force",
      "Set-ItemProperty -Path \"HKCU:\\Control Panel\\Input Method\\Hot Keys\\00000010\" -Name \"Key Modifiers\" -Value ([byte[]](0x00,0xc0,0x00,0x00))",
      "Set-ItemProperty -Path \"HKCU:\\Control Panel\\Input Method\\Hot Keys\\00000010\" -Name \"Virtual Key\" -Value ([byte[]](0xff,0x00,0x00,0x00))",
      "New-Item -Path \"HKCU:\\Control Panel\\Input Method\\Hot Keys\\00000070\" -Force",
      "Set-ItemProperty -Path \"HKCU:\\Control Panel\\Input Method\\Hot Keys\\00000070\" -Name \"Key Modifiers\" -Value ([byte[]](0x00,0xc0,0x00,0x00))",
      "Set-ItemProperty -Path \"HKCU:\\Control Panel\\Input Method\\Hot Keys\\00000070\" -Name \"Virtual Key\" -Value ([byte[]](0xff,0x00,0x00,0x00))",
      "New-Item -Path \"HKU\\.DEFAULT\\Control Panel\\Input Method\\Hot Keys\\00000010\" -Force",
      "Set-ItemProperty -Path \"HKU\\.DEFAULT\\Control Panel\\Input Method\\Hot Keys\\00000010\" -Name \"Key Modifiers\" -Value ([byte[]](0x00,0xc0,0x00,0x00))",
      "Set-ItemProperty -Path \"HKU\\.DEFAULT\\Control Panel\\Input Method\\Hot Keys\\00000010\" -Name \"Virtual Key\" -Value ([byte[]](0xff,0x00,0x00,0x00))",
      "New-Item -Path \"HKU\\.DEFAULT\\Control Panel\\Input Method\\Hot Keys\\00000070\" -Force",
      "Set-ItemProperty -Path \"HKU\\.DEFAULT\\Control Panel\\Input Method\\Hot Keys\\00000070\" -Name \"Key Modifiers\" -Value ([byte[]](0x00,0xc0,0x00,0x00))",
      "Set-ItemProperty -Path \"HKU\\.DEFAULT\\Control Panel\\Input Method\\Hot Keys\\00000070\" -Name \"Virtual Key\" -Value ([byte[]](0xff,0x00,0x00,0x00))"
    ]
  },
  "uninstaller": {
    "script": [
      "$backupPath = \"$dir\\registry_backup.reg\"",
      "if (Test-Path $backupPath) {",
      "reg import $backupPath",
      "Write-Host \"注册表已恢复。\"",
      "} else {",
      "Write-Host \"备份文件不存在，无法恢复注册表。\"",
      "}"
    ]
  }
}
